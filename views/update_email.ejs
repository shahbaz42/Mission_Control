<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Update Email Template</h1>

  <div class="row">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <!-- Makes POST request to /login route -->
          <form action="/updateEmailTemplate" method="POST">
            <div class="form-group">
              <textarea class="form-control" rows="20" name="email_template"><%-email_template%></textarea>
            </div>
            <button type="submit" class="btn btn-dark">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
